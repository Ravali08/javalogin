    agent any

    stages {
        stage('Build') {
            steps {
                // Your build steps here
                echo 'Building...'
            }
        }
    }

    post {
        always {
            // Send email notification
            emailext (
                subject: "Jenkins Build ${currentBuild.result}: ${env.JOB_NAME}",
                body: "Build ${currentBuild.result}: ${env.BUILD_URL}",
                to: 'brsra21@gmail.com',
                replyTo: "brsra21@gmail.com",
                mimeType: 'text/html'
            )
            }
        }
    }
